<?xml version="1.0" encoding="utf-8"?>
<layout>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.ProfileFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_240">


        <View
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/profile_bg"/>
        
        
        <RelativeLayout
            android:layout_width="@dimen/dp_120"
            android:layout_centerInParent="true"
            android:id="@+id/llPic"
            android:layout_height="@dimen/dp_140">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_120"
                android:id="@+id/ivProfile"
                android:layout_centerInParent="true"
                app:civ_border_color="@color/transparentWhite"
                android:src="@drawable/ic_user_dummy"
                app:civ_border_width="@dimen/dp_15"/>
            
           <de.hdodenhof.circleimageview.CircleImageView
               android:layout_width="@dimen/dp_34"
               android:id="@+id/ivCam"
               android:layout_height="@dimen/dp_34"
               android:layout_alignParentBottom="true"
               android:src="@drawable/ic_cam"
               android:layout_centerInParent="true"/>

        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/llPic"
            android:layout_centerInParent="true"
            android:textColor="@color/textWhiteFF"
            android:textSize="@dimen/sp_16"
            android:fontFamily="@font/rubik_medium"
            android:hint="Deniz Mathews"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp_9"
            android:id="@+id/tvName"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp_24"
        android:layout_marginStart="@dimen/dp_16"
        android:layout_marginEnd="@dimen/dp_16"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/llName"
            android:layout_height="@dimen/dp_56">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Name"
                android:fontFamily="@font/rubik_regular"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textGray99"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvName2"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:hint="Deniz Mathews"
                android:gravity="end"
                android:fontFamily="@font/rubik_regular"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/viewE0"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/llEmail"
            android:layout_height="@dimen/dp_56">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Email"
                android:fontFamily="@font/rubik_regular"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textGray99"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/tvEmail"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true"
                android:hint="denizmathews10@gmail.com"
                android:gravity="end"
                android:fontFamily="@font/rubik_regular"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/colorPrimary"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/viewE0"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/shortlist"
            android:layout_height="@dimen/dp_56">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Shortlist "
                android:fontFamily="@font/rubik_regular"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textGray99"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/ic_forwrd_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/viewE0"/>

        </RelativeLayout>



        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/changepass"
            android:layout_height="@dimen/dp_56">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerInParent="true"
                android:text="Change Password "
                android:fontFamily="@font/rubik_regular"
                android:textSize="@dimen/sp_14"
                android:textColor="@color/textGray99"/>

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/dp_16"
                android:src="@drawable/ic_forwrd_arrow"
                android:layout_alignParentEnd="true"
                android:layout_centerInParent="true" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/dp_1"
                android:layout_alignParentBottom="true"
                android:background="@color/viewE0"/>

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Logout"
            android:id="@+id/logout"
            android:fontFamily="@font/rubik_regular"
            android:layout_marginTop="@dimen/dp_19"
            android:textSize="@dimen/sp_14"
            android:textColor="@color/textGray99"/>

    </LinearLayout>

</LinearLayout>
</layout>