<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto">
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="@dimen/dp_260"
    android:elevation="0dp"
    app:cardCornerRadius="@dimen/dp_8"
    android:layout_height="@dimen/dp_265">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:layout_width="@dimen/dp_56"
            android:layout_height="@dimen/dp_64"
            android:layout_centerHorizontal="true"
            android:id="@+id/iv1"
            android:layout_marginTop="@dimen/dp_50"
            android:src="@drawable/ic_logout1"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Are you sure you want\nto logout?"
            android:layout_below="@+id/iv1"
            android:gravity="center"
            android:fontFamily="@font/rubik_regular"
            android:id="@+id/tvConfirm"
            android:textSize="@dimen/sp_18"
            android:layout_marginTop="@dimen/dp_25"
            android:textColor="@color/textBlack"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_36"
            android:layout_marginTop="@dimen/dp_25"
            android:layout_below="@+id/tvConfirm"
            android:layout_marginStart="@dimen/dp_32"
            android:layout_marginEnd="@dimen/dp_32"
            android:orientation="horizontal">



            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:id="@+id/btNo"
                android:layout_height="match_parent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:layout_gravity="center"
                android:backgroundTint="@color/textWhiteFF"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="No"
                style="@style/Widget.MaterialComponents.Button.OutlinedButton"
                android:textColor="@color/textGrey70"
                android:textSize="@dimen/sp_14" />


            <com.google.android.material.button.MaterialButton
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="match_parent"
                android:insetTop="0dp"
                android:insetBottom="0dp"
                android:id="@+id/btYes"
                android:layout_gravity="center"
                android:layout_marginStart="@dimen/dp_8"
                android:backgroundTint="@color/colorPrimary"
                android:fontFamily="@font/rubik_medium"
                android:gravity="center"
                android:text="yes"
                style="@style/Widget.MaterialComponents.Button.UnelevatedButton"
                android:textColor="@color/textWhiteFF"
                android:textSize="@dimen/sp_14" />


        </LinearLayout>

    </RelativeLayout>

</androidx.cardview.widget.CardView>
</layout>