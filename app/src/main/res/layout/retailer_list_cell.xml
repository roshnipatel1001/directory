<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"><data><variable
    name="RetailerListModel"
    type="com.si.directory_app.models.retailer_list.RetailerListModel" /></data>

<LinearLayout
    android:orientation="vertical" android:layout_width="@dimen/dp_160"
    android:background="@drawable/bg_text"
    android:layout_marginTop="@dimen/dp_8"
    android:layout_height="@dimen/dp_165">

    <GridLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:horizontalSpacing="@dimen/dp_8"
        android:layout_gravity="center"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="@dimen/dp_7"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                app:cardBackgroundColor="@color/bgF6"
                android:layout_height="@dimen/dp_88"
                app:cardCornerRadius="@dimen/dp_8">

                <ImageView
                        android:layout_width="@dimen/dp_77"
                        android:layout_height="@dimen/dp_77"
                        android:src="@drawable/ic_image_dummy"
                        android:layout_gravity="center"
                        android:id="@+id/ivRetailer"/>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/sp_14"
                android:fontFamily="@font/rubik_medium"
                android:textColor="@color/textBlack"
                android:hint="Home Depot"
                android:layout_marginTop="@dimen/dp_7"
                android:id="@+id/tvName"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/rating"
                    android:hint="4.5"
                    android:layout_centerInParent="true"
                    android:layout_alignParentStart="true"
                    android:textColorHint="@color/textWhiteFF"
                    android:textSize="@dimen/sp_10"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/textWhiteFF"
                    android:drawableStart="@drawable/ic_star"
                    android:id="@+id/tvRating"
                    android:drawablePadding="@dimen/dp_4"/>


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/sp_14"
                    android:fontFamily="@font/rubik_regular"
                    android:textColor="@color/textGrey70"
                    android:layout_centerInParent="true"
                    android:layout_marginStart="@dimen/dp_13"
                    android:hint="New Palasia"
                    android:id="@+id/address"
                    android:layout_toRightOf="@id/tvRating" />


            </RelativeLayout>

        </LinearLayout>

    </GridLayout>


</LinearLayout>

</layout>